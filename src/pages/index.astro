---
// Importar datos y componentes necesarios
import { mainEvents, footer } from '../data/index';
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import PopUp from '../components/PopUp.astro';
---


<!-- EVENTS -->
<Layout title='Home'>
  <PopUp />
  <section class="w-full pb-[10vh]">
    <div class="contenedor pt-8">
      <div class="w-full flex justify-center mb-8">
        <img class="lg:w-[30%] md:w-[40%] w-[70%]" src="/logo.png" alt="logo funticket">
      </div>
      <div>
        <!-- Eventos -->
        {mainEvents.map((eventGroup) => (
          <div class="my-16">
            <h1 class="text-white text-center mb-5 text-4xl">{eventGroup.title}</h1>
            <div class="w-full md:grid-cols-2  grid-cols-1 gap-4 grid grid-flow-row my-16 justify-items-center">
              <!-- Sub Eventos -->
              {eventGroup.events.map((event) => (
                <div class="bg-black2 max-w-xs border overflow-hidden border-white border-opacity-20 flex flex-col rounded-lg sm:flex-row sm:items-center sm:max-w-none">
                  <div class="sm:w-[50%]">
                    <img src={event.urlfoto} alt={`${eventGroup.title} - ${event.ciudad}`} class="object-cover"/>
                  </div>
                  <div class="flex flex-col px-4 py-4 sm:justify-center sm:w-[50%]">
                    <div class="space-y-3">
                      <div class="space-y-2">
                        <p class="text-white p-big">{event.ciudad}</p>
                        <div class="flex items-center mb-3">
                          <img src="/icon-date.svg" width="48" height="48" class="flex w-4 h-4 mr-2" alt="icon date funticket" />
                          <p class="text-morado-light">{event.fecha}</p>
                        </div>
                        <p class="text-white p-small">{event.lugar.toUpperCase()}</p>
                      </div>
                      {event.urlboton && (
                        <div>
                          <a href={event.urlboton} class='p-small px-2 py-1 rounded-lg bg-rosa text-white flex justify-between items-center w-full' target="_blank">
                            <span>Comprar Boletos</span>
                            <img src="/icon-ticket.svg" alt="icon tickect funticket" width="48" height="48" class="flex w-4 h-4 mr-2" />
                          </a>
                        </div>
                      )}
                      {event.links.length > 0 && event.links.map((link) => (
                        <div>
                          <a href={link.url} class='p-small px-2 py-1 rounded-lg inline-block border border-pink-800 text-white flex justify-between items-center w-full' target="_blank">
                            <span>{link.label}</span>
                            <img src="/icon-ticket.svg" alt="icon tickect funticket" width="48" height="48" class="flex w-4 h-4 mr-2" />
                          </a>
                        </div>
                      ))}
                    </div>
                  </div>
                </div>
              ))}
              <!--/ Sub Eventos -->
            </div>
          </div>
        ))}
        <!--/ Eventos -->
      </div>
    </div>
  </section>

  <Footer {...footer}/>
</Layout>
  
